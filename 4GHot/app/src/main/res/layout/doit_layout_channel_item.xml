<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="3dp"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:scrollbars="vertical"
    android:id="@+id/device_layout"
    android:paddingRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2.5"
            android:id="@+id/title_text"
            android:text="通道：" />

        <com.suke.widget.SwitchButton
            android:id="@+id/id_switch_rf"
            android:layout_width="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:visibility="gone"
            app:sb_checked="false"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow android:padding="0dp">
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:text="频点：" />

                <EditText
                    android:id="@+id/editText_fcn"
                    style="@style/dialog_edit"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:digits="@string/fcn_rule" />
            </TableRow>
            <TableRow android:padding="0dp">
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:text="周期：" />

                <EditText
                    android:id="@+id/et_period"
                    style="@style/dialog_edit"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:digits="@string/fcn_rule"
                    android:inputType="number"
                    android:maxLength="5"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:text="增益：" />
                <EditText
                    android:id="@+id/et_gain"
                    style="@style/dialog_edit"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:digits="@string/pa_rule"
                    android:maxLength="5"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:text="下行功率：" />
                <EditText
                    android:id="@+id/editText_pa"
                    style="@style/dialog_edit"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:digits="@string/pa_rule"
                    android:maxLength="5"/>
            </TableRow>

            <TableRow
                android:visibility="gone">
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:text="上行增益：" />
                <EditText
                    android:id="@+id/editText_ga"
                    style="@style/dialog_edit"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:digits="@string/pa_rule"
                    android:maxLength="5"/>
            </TableRow>

            <TableRow android:padding="0dp"
                android:visibility="gone">
                <TextView
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="7dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:text="最小接收电平：" />
                <EditText
                    android:id="@+id/etRLM"
                    style="@style/dialog_edit"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:digits="@string/pa_rule"
                    android:maxLength="5"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_save"
        android:textColor="@color/darkorange"
        android:background="@drawable/common_button_bkg"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="3dp"
        android:text="@string/set_now" />
</LinearLayout>