<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@android:color/black"
    android:alpha="0.8"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_fcn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/ll_edit_fcn"
        android:layout_marginRight="20dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:gravity="left"/>


    <LinearLayout
        android:id="@+id/ll_select_fcn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/iv_select_fcn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_fcn_normal"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_select_fcn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_delete_fcn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ll_select_fcn"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:layout_centerVertical="true">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_delete_fcn"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_fcn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ll_delete_fcn"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="invisible"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_edit_fcn"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@android:color/white"
            android:layout_marginLeft="3dp"
            android:textSize="10sp"/>

    </LinearLayout>

</RelativeLayout>